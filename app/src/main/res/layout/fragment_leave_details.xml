<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

   <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
       
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"	  
            android:background="@color/white">
   
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2">

		    	<TextView 
			        android:id="@+id/buttons_myleavesoverview_followup"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:text="@string/follow_up"
			        android:textColor="@color/orange_velosi"
			        android:textStyle="bold"
			        android:textSize="@dimen/fsizes_listcell_header"
			        android:layout_alignParentRight="true"
			        android:gravity="center_vertical"
			        android:paddingRight="10dp" />           
	                
            </RelativeLayout>
	    		                            
        </TableRow>
       
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                        
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sidebar_menu_separator"
                android:layout_span="2" />           
                
        </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <View
               android:layout_width="match_parent"
               android:layout_height="20dp"
               android:layout_span="2" />

       </TableRow>

       <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/styles_trs">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_labels_detail"
                android:paddingTop="10dp"
                android:text="Type " />
            
            <TextView 
                android:id="@+id/tviews_myleavesoverview_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_detailoverview_compressedinputs"/>
            
        </TableRow>

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/styles_trs">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_labels_detail"
                android:text="Status" />
            
            <TextView 
                android:id="@+id/tviews_myleavesoverview_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_detailoverview_compressedinputs"/>
            
        </TableRow>

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/styles_trs">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_labels_detail"
                android:text="Staff" />
            
            <TextView 
                android:id="@+id/tviews_myleavesoverview_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_detailoverview_compressedinputs"/>
            
        </TableRow>

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/styles_trs">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_labels_detail"
                android:text="From" />
            
            <TextView 
                android:id="@+id/tviews_myleavesoverview_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_detailoverview_compressedinputs"/>
            
        </TableRow>

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/styles_trs">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_labels_detail"
                android:text="To" />
            
            <TextView 
                android:id="@+id/tviews_myleavesoverview_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_detailoverview_compressedinputs"/>
            
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/styles_trs">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_labels_detail"
                android:text="Days" />
            
            <TextView 
                android:id="@+id/tviews_myleavesoverview_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_detailoverview_compressedinputs"/>
            
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/styles_trs">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_labels_detail"
                android:text="Work Days" />

            <TextView 
                android:id="@+id/tviews_myleavesoverview_workingDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styles_detailoverview_compressedinputs"/>
            
        </TableRow>

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
                        
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/divider_insetted"
                android:layout_span="2" />

        </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="@style/styles_trs">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_span="2"
               android:text="Notes"
               android:textColor="@color/orange_velosi"
               android:textSize="@dimen/fsizes_listcell_header"
               android:textStyle="bold"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:paddingLeft="12dp"/>

       </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
		    <TextView 
		        android:id="@+id/tviews_myleavesoverview_notes"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="17dp"
                android:textSize="@dimen/fsizes_listcell_header"
                android:textColor="@color/menu_list_separator"
		        android:layout_span="2" />
                
        </TableRow>
		    
		    	        
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                        
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sidebar_menu_separator"
                android:layout_span="2" />           
                
        </TableRow>
	    	    
    </TableLayout>   
    
</ScrollView>
