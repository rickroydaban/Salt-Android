<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
   	<TableLayout
	    android:id="@+id/container_leaveinputtable" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:layout_marginTop="10dp"
	    android:stretchColumns="1" >
	    
	    <TableRow 
	        style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Claim Type"
	            style="@style/styles_labels_inputs"/>
	        
	        <Spinner 
	            android:id="@+id/choices_claiminput_type"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_spinner_white" />
	        
	    </TableRow>
	    
	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Staff"
	            style="@style/styles_labels_inputs"/>
	        
	        <Spinner 
	            android:id="@+id/choices_claiminput_staff"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_spinner_white" />
	        
	    </TableRow>
	    
	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Office"
	            style="@style/styles_labels_inputs"/>
	        
	        <Spinner 
	            android:id="@+id/choices_claiminput_office"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
                style="@style/styles_spinner_white"
                />
	        
	    </TableRow>	    

	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Charge To"
	            style="@style/styles_labels_inputs"/>
	        
	        <Spinner 
	            android:id="@+id/choices_claiminput_chargeTo"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_spinner_white" />
	        
	    </TableRow>	    
	    
	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Approver"
	            style="@style/styles_labels_inputs"/>
	        
	        <Spinner 
	            android:id="@+id/choices_claiminput_approver"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_spinner_white" />
	        
	    </TableRow>	    	    
	    	 
	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent">
	        
	        <CheckBox 
	            android:id="@+id/switchs_claiminput_paidbycc"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Paid By Company Card"
	            android:layout_span="2"
	            android:layout_gravity="right"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/black"/>
	        	        
	    </TableRow>	    	    
	    	    
	    <TableRow 
	        android:id="@+id/trs_claiminput_businessadvance"
           	style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Business Adv."
	            style="@style/styles_labels_inputs"/>
	        
	        <Spinner 
	            android:id="@+id/choices_claiminput_businessadvance"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               	style="@style/styles_spinner_white" />
	        
	    </TableRow>	    	    
	    	    	    
    </TableLayout>
   	
</ScrollView>