<?xml version="1.0" encoding="utf-8"?>    
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    
  	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:layout_marginTop="10dp"
	    android:stretchColumns="1" >
	    
	    <TableRow 
	        style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Claim Type"
	            style="@style/styles_labels_inputs"/>
	        
	        <Spinner 
	            android:id="@+id/choices_dialog_searchclaim_type"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_spinner_white" />
	        
	    </TableRow>
	    
	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Status"
	            style="@style/styles_labels_inputs"/>
	        
	        <Spinner 
	            android:id="@+id/choices_dialog_searchclaim_status"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_spinner_white" />
	        
	    </TableRow>

	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Claim Number"
	            style="@style/styles_labels_inputs"/>
	        
	        <EditText 
	            android:id="@+id/choices_dialog_searchclaim_claimnumber"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_dialog_leaverequest_inputs" />
	        
	    </TableRow>	    	
	    
	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Staff Name"
	            style="@style/styles_labels_inputs"/>
	        
	        <EditText 
	            android:id="@+id/choices_dialog_staffName_status"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_dialog_leaverequest_inputs" />
	        
	    </TableRow>
	    
	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Cost Centre"
	            style="@style/styles_labels_inputs"/>
	        
	        <EditText 
	            android:id="@+id/choices_dialog_searchclaim_costCenter"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_dialog_leaverequest_inputs" />
	        
	    </TableRow>	    	 
	    
	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Approver Name"
	            style="@style/styles_labels_inputs"/>
	        
	        <EditText 
	            android:id="@+id/choices_dialog_searchclaim_approver"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_dialog_leaverequest_inputs" />
	        
	    </TableRow>	 
	    
	    <TableRow 
           style="@style/styles_trs_inputs"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Account"
	            style="@style/styles_labels_inputs"/>
	        
	        <EditText 
	            android:id="@+id/choices_dialog_searchclaim_account"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
               style="@style/styles_dialog_leaverequest_inputs" />
	        
	    </TableRow>	    
	</TableLayout>
</ScrollView>