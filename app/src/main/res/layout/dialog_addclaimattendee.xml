<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:shrinkColumns="1"
        android:background="#FFF">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:layout_span="2"
                android:text="Add Attendee"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sidebar_menu_separator"
                android:layout_span="2"/>

        </TableRow>

        <TableRow
            style="@style/styles_trs"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name "
                style="@style/styles_labels_detail"/>

            <EditText
                android:id="@+id/etexts_dialogs_addclaimattendee_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/styles_editable_inputs"
                android:inputType="textPersonName"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/divider_insetted"
                android:layout_span="2"/>

        </TableRow>

        <TableRow
            style="@style/styles_trs"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title "
                style="@style/styles_labels_detail"/>

            <EditText
                android:id="@+id/etexts_dialogs_addclaimattendee_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/styles_editable_inputs"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sidebar_menu_separator"
                android:layout_span="2"/>

        </TableRow>

        <TableRow
            style="@style/styles_trs"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/sidebar_menu_separator"
                    android:layout_span="2"/>

                <EditText
                    android:id="@+id/etexts_dialogs_addclaimattendee_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/styles_editable_inputs"
                    android:singleLine="false"
                    android:maxLines="3"
                    android:hint="Notes"
                    android:inputType="textMultiLine"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/sidebar_menu_separator"
                    android:layout_span="2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white" />

            </LinearLayout>


        </TableRow>

    </TableLayout>
</ScrollView>