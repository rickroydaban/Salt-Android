<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_actionbar_height"
    android:background="@color/orange_velosi" >        
    
    <RelativeLayout 
        android:id="@+id/buttons_actionbar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

	    <ImageView 
	        android:layout_width="@dimen/dimens_actionbar_item"
	        android:layout_height="@dimen/dimens_actionbar_item"
	        android:src="@drawable/icon_back"
	        android:scaleType="fitXY" />
	        
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/containers_actionbar_leavedetails_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
	    android:layout_alignParentRight="true"
		android:layout_centerVertical="true">
	    			
	    <TextView 
	        android:id="@+id/buttons_actionbar_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Cancel"
	        android:textColor="@color/white"
            android:textSize="@dimen/fsizes_listcell_header"
	        android:paddingRight="15dp"/>

	    <TextView 
	        android:id="@+id/buttons_actionbar_edit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Edit"
	        android:textColor="@color/white"
            android:textSize="@dimen/fsizes_listcell_header"
	        android:paddingRight="15dp"/>
		    	    	    
    </LinearLayout>
	
    <TextView 
        android:id="@+id/tviews_actionbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Title"
        android:textSize="@dimen/fsizes_listcell_header"
        android:textStyle="bold"
        android:layout_toRightOf="@id/buttons_actionbar_back"
        android:layout_toLeftOf="@id/containers_actionbar_leavedetails_right"
        android:gravity="center_vertical"/>
		
	    	    
</RelativeLayout>
