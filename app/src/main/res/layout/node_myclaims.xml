<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <ImageView 
        android:id="@+id/iviews_nodes_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_next"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tviews_myclaims_node_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_toLeftOf="@id/iviews_nodes_next"
        android:layout_centerVertical="true" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_toLeftOf="@id/tviews_myclaims_node_status">

        <TextView
            android:id="@+id/tviews_myclaims_node_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/fsizes_listcell_header"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tviews_myclaims_node_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"
                android:textSize="@dimen/fsizes_listcell_subheader"/>

            <TextView
                android:id="@+id/tviews_myclaims_node_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_orange"
                android:textSize="@dimen/fsizes_listcell_subheader"
                android:paddingLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>    
        
</RelativeLayout>

