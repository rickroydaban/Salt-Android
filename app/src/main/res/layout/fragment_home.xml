	<RelativeLayout 
	    android:id="@+id/containers_home_pagertitle"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView 
	        android:id="@+id/tviews_home_pagertitle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"   
