<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
            
    <TextView 
        android:id="@+id/tviews_nodes_claimitemattendee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fsizes_listcell_header"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView 
        android:id="@+id/tviews_nodes_claimitemattendee_jobtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_listcell_bottom"
        android:textColor="@color/black"
	  	android:textSize="@dimen/fsizes_listcell_subheader" />
    
    <TextView 
        android:id="@+id/tviews_nodes_claimitemattendee_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
	  	android:textSize="@dimen/fsizes_listcell_subheader" />
                        
</LinearLayout>    
     

