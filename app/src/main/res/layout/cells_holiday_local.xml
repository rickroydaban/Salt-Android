<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="17dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:background="#FFF" >
    
    <TextView 
        android:id="@+id/tviews_cells_localholiday_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fsizes_listcell_header"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/tviews_cells_localholiday_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fsizes_listcell_subheader"
            android:textColor="@color/black" />
        
        <TextView 
            android:id="@+id/tviews_cells_localholiday_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="@dimen/fsizes_listcell_subheader"
            android:textColor="@color/menu_list_separator" />
        
    </LinearLayout>
    
</LinearLayout>
