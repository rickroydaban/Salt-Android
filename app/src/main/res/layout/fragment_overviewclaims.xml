<?xml version="1.0" encoding="utf-8"?>    
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <TableLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="0">
      
    <TableRow 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      
      <TextView 
        android:layout_span="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Outstanding"
     	style="@style/styles_home_leavesoverview_header"/>
      
    </TableRow> 
    
    <TableRow 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView 
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listtitem1_small"
        android:text="Open"/>
        
      <TextView 
        android:id="@+id/labels_overviewclaims_open"
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listtitem1_small"
        android:gravity="center"/>
        
    </TableRow>
    
    <TableRow 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView 
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listitem2_small"
        android:text="Submitted"/>
        
      <TextView 
        android:id="@+id/labels_overviewclaims_submitted"
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listitem2_small"
        android:gravity="center"/>
        
    </TableRow>

    <TableRow 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView 
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listtitem1_small"
        android:text="Approved by Manager"/>
        
      <TextView 
        android:id="@+id/labels_overviewclaims_approvedbymanager"
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listtitem1_small"
        android:gravity="center"/>
        
    </TableRow>

    <TableRow 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView 
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listitem2_small"
        android:text="Approved by Accounts"/>
        
      <TextView 
        android:id="@+id/labels_overviewclaims_approvedbyaccounts"
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listitem2_small"
        android:gravity="center"/>
        
    </TableRow>
    

    <TableRow 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      
      <TextView 
        android:layout_span="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approver's Section"
     	style="@style/styles_home_leavesoverview_header"/>

    </TableRow> 
    
    <TableRow 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView 
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listtitem1_small"
        android:text="Claims for Approval"/>
        
      <TextView 
        android:id="@+id/labels_overviewclaims_forapproval"
        android:layout_span="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/styles_listtitem1_small"
        android:gravity="center"/>
        
    </TableRow>
          
  </TableLayout>
      
</ScrollView>
