<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/light_gray">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

		<ListView 
		    android:id="@+id/lists_sidebar"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:divider="@color/sidebar_menu_separator"
		    android:listSelector="@color/light_gray"
		    android:dividerHeight="1dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/containers_activities_home_foreshadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/dialog_holo_light_frame"/>

    <RelativeLayout
        android:id="@+id/containers_activities_home_fore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

