<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/containers_nodes_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_next"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tviews_cells_claimitem_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fsizes_listcell_subheader"
        android:textColor="@color/black"
        android:layout_toLeftOf="@id/containers_nodes_next"
        android:layout_centerVertical="true"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:layout_toLeftOf="@id/tviews_cells_claimitem_status">
            
		<TextView 
		    android:id="@+id/tviews_cells_claimitem_category"
			android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textSize="@dimen/fsizes_listcell_header"
            android:textColor="@color/black"
		    android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iviews_cells_claimitem_receipt"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_receipt"/>

            <TextView
                android:id="@+id/tviews_cells_claimitem_foreign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fsizes_listcell_subheader"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tviews_cells_claimitem_expensedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fsizes_listcell_subheader"
                android:layout_marginLeft="5dp"
                android:textColor="#909090" />

        </LinearLayout>

        <TextView
            android:id="@+id/tviews_cells_claimitem_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fsizes_listcell_subheader"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"/>
	        
    </LinearLayout>

</RelativeLayout>