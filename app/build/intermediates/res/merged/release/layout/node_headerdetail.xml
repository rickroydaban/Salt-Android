<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <ImageView 
        android:id="@+id/iviews_nodes_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_next"
        android:layout_centerVertical="true"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_toLeftOf="@id/iviews_nodes_next">
            
        <TextView 
            android:id="@+id/tviews_nodes_headerdetail_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fsizes_listcell_header"
            android:textColor="@color/black"
            android:textStyle="bold"/>

		<TextView 
		    android:id="@+id/tviews_nodes_headerdetail_detail"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            android:textColor="@color/black"
		    android:textSize="@dimen/fsizes_listcell_subheader"/>
		        		    		   
				        		        
		        		    
    </LinearLayout>    
        
</RelativeLayout>
