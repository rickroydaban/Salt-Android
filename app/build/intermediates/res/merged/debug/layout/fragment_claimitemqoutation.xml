<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="17dp"
        android:paddingLeft="17dp"
        android:paddingRight="10dp"
        android:background="#FFF">

        <TextView
            android:id="@+id/tviews_claimitemqoutation_isprimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textSize="@dimen/fsizes_listcell_subheader"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tviews_claimitemquotation_supplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fsizes_listcell_header"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/tviews_claimitemqoutation_isprimary"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="#FFF">

        <TextView
            android:id="@+id/tviews_claimitemqoutation_inusd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/fsizes_listcell_header"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tviews_claimitemqoutation_localamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/fsizes_listcell_header"
            android:paddingLeft="5dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:background="#FFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fsizes_listcell_header"
                    android:textStyle="bold"
                    android:text="Financial Scheme"/>


                <TextView
                    android:id="@+id/tviews_claimitemqoutation_financialscheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fsizes_listcell_header"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Payment Term"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fsizes_listcell_header"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tviews_claimitemqoutation_paymentterm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fsizes_listcell_header"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tviews_claimitemqoutation_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/fsizes_listcell_header"
                android:layout_marginTop="10dp"
                android:paddingLeft="17dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_insetted" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fsizes_listcell_header"
                        android:textColor="#909090"
                        android:text="No Attachment"
                        android:paddingLeft="17dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containers_qoutationattachments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFF"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/menu_list_separator"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


