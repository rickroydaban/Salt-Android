<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_insetted" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iviews_nodes_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_download"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tviews_node_tvwithseparator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="13dp"
            android:textColor="@color/black"
            android:textSize="@dimen/fsizes_listcell_header"
            android:background="@android:color/white"
            android:singleLine="true"
            android:ellipsize="start"
            android:layout_toLeftOf="@id/iviews_nodes_next"/>

    </RelativeLayout>

</LinearLayout>

