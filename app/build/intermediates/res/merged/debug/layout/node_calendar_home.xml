<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#DEDEDE" 
    android:padding="7dp">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_home_calendar_flag_height"
        android:orientation="horizontal">
        
        <RelativeLayout 
            android:layout_width="@dimen/dimens_home_calendar_flag_width"
            android:layout_height="match_parent"
            android:padding="5dp">
            
		        <ImageView 
		            android:id="@+id/images_node_calendar_home_flag"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:scaleType="fitXY"
                android:background="@drawable/bg_input_blur"/>
            
        </RelativeLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                
                <TextView 
                    android:id="@+id/tviews_node_calendar_home_date"
                    android:layout_width="@dimen/dimens_home_calendar_date_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/fsizes_listcell_subheader"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:background="@drawable/bg_calendar_date"/>
                
                <TextView 
                    android:id="@+id/tviews_node_calendar_home_country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="@dimen/fsizes_listcell_subheader"
                    android:layout_toLeftOf="@id/tviews_node_calendar_home_date"/>
                
            </RelativeLayout>
            
            <TextView 
                android:id="@+id/tviews_node_calendar_home_holiday"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/fsizes_listcell_header"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/containers_node_calendar_home_offices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"/>
    
</LinearLayout>
