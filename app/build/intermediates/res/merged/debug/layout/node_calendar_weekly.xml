<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="7dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">
    
    <TextView 
	    android:id="@+id/tviews_node_calendar_home_holiday"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:textStyle="bold"
        android:textColor="@color/black"
	    android:textSize="@dimen/fsizes_listcell_header"/>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView 
            android:id="@+id/tviews_node_calendar_home_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/fsizes_listcell_subheader"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tviews_node_calendar_home_date">

            <ImageView
                android:id="@+id/images_node_calendar_home_flag"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:background="@drawable/bg_input_blur"/>

            <TextView
                android:id="@+id/tviews_node_calendar_home_country"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/fsizes_listcell_subheader"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/containers_node_calendar_home_offices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:padding="10dp"/>
    
</LinearLayout>
