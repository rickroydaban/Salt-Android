<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_actionbar_height"
    android:background="@color/orange_velosi" >

	<RelativeLayout
		android:id="@+id/buttons_actionbar_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/paddings_actionbar_buttons"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true">

		<ImageView
			android:layout_width="@dimen/dimens_actionbar_item"
			android:layout_height="@dimen/dimens_actionbar_item"
			android:src="@drawable/icon_list"
			android:scaleType="fitXY" />

	</RelativeLayout>

	<LinearLayout
        android:id="@+id/containers_actionbar_mycalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

	    <TextView 
	        android:id="@+id/buttons_actionbar_now"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Today"
	        android:textColor="@color/white"
			android:textSize="@dimen/fsizes_listcell_header"
	        android:layout_gravity="center_vertical"
	        android:paddingRight="15dp" />
	       
	    <RelativeLayout 
	        android:id="@+id/buttons_actionbar_refresh"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/paddings_actionbar_buttons">
	
		    <ImageView 
		        android:layout_width="@dimen/dimens_actionbar_item"
		        android:layout_height="@dimen/dimens_actionbar_item"
		        android:src="@drawable/icon_refresh"
		        android:scaleType="fitXY" />
		        
	    </RelativeLayout>  

    </LinearLayout>
    
    <TextView 
        android:id="@+id/tviews_actionbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Title"
		android:textSize="@dimen/fsizes_listcell_header"
        android:textStyle="bold"
        android:layout_toRightOf="@id/buttons_actionbar_menu"
        android:layout_toLeftOf="@id/containers_actionbar_mycalendar"
        android:gravity="center_vertical"/>
    
</RelativeLayout>
